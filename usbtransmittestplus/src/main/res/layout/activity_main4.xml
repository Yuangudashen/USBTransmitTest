<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yuangudashen.testcppapp.usbtransmittestplus.Main4Activity">

    <Button
        android:id="@+id/get_card_id_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="获取卡号" />

    <TextView
        android:id="@+id/card_id_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="卡号："
        android:layout_above="@id/get_card_id_btn"
        android:layout_alignLeft="@id/get_card_id_btn"
        android:layout_marginBottom="20dp"
        android:background="@drawable/shape_btn_bg_enable"/>

    <Button
        android:id="@+id/connect_device_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/get_card_id_btn"
        android:layout_alignLeft="@id/get_card_id_btn"
        android:text="连接设备"/>

</RelativeLayout>
